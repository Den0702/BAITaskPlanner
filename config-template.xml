<?xml version='1.0' encoding='utf-8'?>
<widget id="com.bai.taskplanner" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>TaskPlanner</name>
    <description>
        The task of TaskPlanner is planning tasks 
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>


    <!--for-production
    <content src="index.html" />
    -->

    <!--for-development-->
    <content src="http://192.168.1.40:3000/" />
    <allow-navigation href="http://192.168.1.40:3000/*" />
    <!--/for-development-->


    <universal-links>
        <host name="taskplanner.page.link" scheme="https" />
        <host name="taskplanner-62e04.firebaseapp.com" scheme="https">
            <path url="/__/auth/callback" />
        </host>
    </universal-links>
    <preference name="android-minSdkVersion" value="19" />
    <preference name="AndroidLaunchMode" value="singleTask" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-camera" spec="^4.0.3" />
    <plugin name="cordova-universal-links-plugin" spec="~1.2.1" />
    <plugin name="cordova-plugin-buildinfo" spec="^2.0.2" />
    <plugin name="cordova-plugin-browsertab" spec="^0.2.0" />
    <plugin name="cordova-plugin-inappbrowser" spec="^3.0.0" />
</widget>
